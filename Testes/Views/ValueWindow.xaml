<Window x:Class="Testes.Views.ValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testes.Views"
        mc:Ignorable="d"
        Title="Ввод значения" Height="250" Width="320" MinHeight="250" MinWidth="320">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="100">
            <TextBlock Text="Ввод значения"/>
            <TextBox x:Name="TextBox" />
            <Button Click="ButtonBase_OnClick" Content="Подтвердить" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
